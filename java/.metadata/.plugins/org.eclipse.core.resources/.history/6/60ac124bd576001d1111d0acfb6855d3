package com;

public class forLoopCondtion {
	public static void main(String[] args) {
		
		for(int i=1;i<=5;i++)
		{
			for(int j=1;j<=i;j++)
			{
				System.out.print("i+1");
			}
			System.out.println("");	
		}
	
	//rerverse pattern 
		
