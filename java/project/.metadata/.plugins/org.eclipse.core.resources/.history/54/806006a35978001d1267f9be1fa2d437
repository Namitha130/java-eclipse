			//example 1 for * pattern
			for(int i=1;i<=5;i++)
			{
				for(int j=1;j<=i;j++)
				{
				 System.out.print("*");
				}
				System.out.println("");			
			}
		
		// expmale 2 for star pattern
			for(int i=1;i<=5;i++)
			{
				for(int j=5;j>=i;j--)
				{
				 System.out.print("*");
				}
				System.out.println("");			
			}
	}
